<?xml version="1.0" encoding="utf-8"?>
<layout>

    <data>

        <import type="com.studyfork.sfoide.presentation.detail.DetailViewModel" />

        <import type="com.studyfork.sfoide.presentation.databinding.EmojiBindingHelper" />

        <variable
            name="viewModel"
            type="DetailViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/iv_profile"
            loadImageCircleCrop="@{viewModel.user.picture}"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_margin="64dp"
            app:layout_constraintBottom_toTopOf="@id/tv_name"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:ignore="ContentDescription" />

        <TextView
            android:id="@+id/tv_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="32dp"
            android:text="@{viewModel.user.name}"
            android:textSize="18sp"
            app:layout_constraintBottom_toTopOf="@id/tv_email"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/iv_profile"
            tools:text="PeggyWells" />

        <TextView
            android:id="@+id/tv_gender"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@{EmojiBindingHelper.INSTANCE.getGenderEmoji(viewModel.user.gender)}"
            android:textSize="18sp"
            app:layout_constraintBottom_toBottomOf="@id/tv_name"
            app:layout_constraintStart_toEndOf="@id/tv_name"
            app:layout_constraintTop_toTopOf="@id/tv_name"
            tools:text="@string/male_emoji" />

        <TextView
            android:id="@+id/tv_country"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@{EmojiBindingHelper.INSTANCE.getCountryEmoji(viewModel.user.nat)}"
            android:textSize="18sp"
            app:layout_constraintBottom_toBottomOf="@id/tv_name"
            app:layout_constraintStart_toEndOf="@id/tv_gender"
            app:layout_constraintTop_toTopOf="@id/tv_name"
            tools:text="@string/us_emoji" />

        <TextView
            android:id="@+id/tv_email_emoji"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/email_emoji"
            android:textSize="12sp"
            app:layout_constraintBottom_toTopOf="@id/tv_phone_number"
            app:layout_constraintStart_toStartOf="@id/tv_name"
            app:layout_constraintTop_toBottomOf="@id/tv_name" />

        <TextView
            android:id="@+id/tv_email"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@{viewModel.user.email}"
            android:textSize="12sp"
            app:layout_constraintBottom_toBottomOf="@id/tv_email_emoji"
            app:layout_constraintStart_toEndOf="@id/tv_email_emoji"
            app:layout_constraintTop_toTopOf="@id/tv_email_emoji"
            tools:text="email@example.com" />

        <TextView
            android:id="@+id/tv_phone_number_emoji"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/telephone_emoji"
            android:textSize="12sp"
            app:layout_constraintBottom_toTopOf="@id/tv_cellphone_number"
            app:layout_constraintStart_toStartOf="@id/tv_name"
            app:layout_constraintTop_toBottomOf="@id/tv_email_emoji" />

        <TextView
            android:id="@+id/tv_phone_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@{viewModel.user.phone}"
            android:textSize="12sp"
            app:layout_constraintBottom_toBottomOf="@id/tv_phone_number_emoji"
            app:layout_constraintStart_toEndOf="@id/tv_phone_number_emoji"
            app:layout_constraintTop_toTopOf="@id/tv_phone_number_emoji"
            tools:text="222-22-2-222" />

        <TextView
            android:id="@+id/tv_cellphone_number_emoji"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/mobile_phone_emoji"
            android:textSize="12sp"
            app:layout_constraintStart_toStartOf="@id/tv_name"
            app:layout_constraintTop_toBottomOf="@id/tv_phone_number_emoji" />

        <TextView
            android:id="@+id/tv_cellphone_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@{viewModel.user.cell}"
            android:textSize="12sp"
            app:layout_constraintBottom_toBottomOf="@id/tv_cellphone_number_emoji"
            app:layout_constraintStart_toEndOf="@id/tv_cellphone_number_emoji"
            app:layout_constraintTop_toTopOf="@id/tv_cellphone_number_emoji"
            tools:text="222-22-2-222" />

        <FrameLayout
            android:id="@+id/map"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="32dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_cellphone_number" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>
