<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:bind="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="model"
            type="com.studyfork.sfoide.presentation.detail.DetailViewModel" />
    </data>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                tools:context=".presentation.detail.DetailActivity">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingStart="@dimen/activity_margin_start"
                    android:paddingEnd="@dimen/activtiy_margin_end">

                    <ImageView
                        android:layout_width="250dp"
                        android:layout_height="250dp"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="50dp"
                        android:layout_marginBottom="50dp"
                        bind:setCircleImageUrl="@{model.userItem.profileLarge}"
                        tools:background="@color/colorAccent" />

                    <TextView
                        style="@style/TextStyle.Medium"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="5dp"
                        android:text="@{model.userItem.title}"
                        tools:text="BlackJin(24) \uD83D\uDE4B\u200D\u2642\uFE0F \uD83C\uDDFA\uD83C\uDDF8" />

                    <TextView
                        style="@style/TextStyle.Small"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="5dp"
                        android:text="@{@string/cell_format(model.userItem.cell)}"
                        tools:text="\u260E\uFE0F : cell " />

                    <TextView
                        style="@style/TextStyle.Small"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="5dp"
                        android:text="@{@string/phone_format(model.userItem.phone)}"
                        tools:text="\uD83D\uDCF1 : phone" />

                    <TextView
                        style="@style/TextStyle.Small"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@{@string/email_format(model.userItem.email)}"
                        tools:text="\uD83D\uDCE7 : email " />
                </LinearLayout>

                <fragment
                    android:id="@+id/map"
                    android:name="com.google.android.gms.maps.SupportMapFragment"
                    android:layout_width="match_parent"
                    android:layout_height="300dp"
                    android:layout_marginTop="30dp" />
            </LinearLayout>
        </ScrollView>
    </FrameLayout>
</layout>